@model GamesApp.Web.Models.Game[]
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <title>Games App</title>

    @* Custom CSS *@
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
</head>
<body>
    <header>
        <img src="/Images/index-header.jpg" />
        <h1 class="page-heading">My Favorite Games</h1>
    </header>

    <main class="main-index">
        <div class="game-cards-container">
            @foreach (var game in Model)
            {
                <a asp-controller="Games" asp-action="ViewGame" asp-route-id="@game.Id" class="game-card">
                    <img src="@game.ImageUrl" alt="@game.Name" />
                    <h2>@game.Name</h2>
                </a>
            }
        </div>

        <a asp-controller="Games" asp-action="AddGame" class="btn">Add a New Game</a>
    </main>
</body>
</html>